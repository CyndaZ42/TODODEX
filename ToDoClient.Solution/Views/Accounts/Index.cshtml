@using System.Security.Claims;
@using ToDoClient.Solution.Models;
@model ToDoClient.Solution.Models.ApplicationUser;

@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name</p>
  @using (Html.BeginForm("LogOff", "Accounts"))
  {
    <button type="submit" class="w3-button w3-border w3-hover-indigo">Log Out</button>
  }
}
else
{
  
  <a href='@Url.Action("Register")'><button class="w3-button w3-border w3-hover-indigo">Register</button></a>
  <a href='@Url.Action("Login")'><button class="w3-button w3-border w3-hover-indigo">Log In</button></a>
}