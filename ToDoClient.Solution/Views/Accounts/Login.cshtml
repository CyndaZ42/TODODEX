@using ToDoClient.Solution.ViewModels;
@model LoginViewModel

<h4>Log into your account</h4>
<h6 id="failedLogin" > @ViewBag.failedLogin</h6>
<hr />

@using (Html.BeginForm())
{
  <table class="table">
    <tr>  
      <th>@Html.LabelFor(model => model.Username)</th>
      <td>@Html.TextBoxFor(model => model.Username)</td>
    </tr>

    <tr>
      <th>@Html.LabelFor(model => model.Password)</th>
      <th>@Html.PasswordFor(model => model.Password)</th>
    </tr>
  </table>
  <button type="submit" class="btn btn-primary">Log In</button>
}
<br>
<a href='@Url.Action("Register")'><button class="btn btn-primary">Register a New Account</button></a>