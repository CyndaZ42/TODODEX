@using ToDoClient.Solution.Models
@model ToDoClient.Solution.Models.ToDo
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> userManager

<h4>ToDo Details</h4>

<img src='@Model.Image' style="width:400px" />
<br><br>
<table class="table">
  <tr><th>@Model.Name</th></tr>
  <tr><td>@Model.PP</td></tr>
  <tr><td>@Model.Category</td></tr>
  <tr><td>@Model.Description</td></tr>
</table>

@using (Html.BeginForm("AddToDo", "Accounts", new { id = @Model.ToDoId}))
{
  @Html.HiddenFor(model => model.ToDoId)
  <button type="submit">Save</button>
}